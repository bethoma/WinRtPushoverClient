<Page
    x:Class="BasicClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BasicClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
        <StackPanel Orientation="Horizontal" Height="100">
            <TextBox Name="userNameTextbox" Width="200"></TextBox>
            <PasswordBox Name="passwordTextbox" Width="200"></PasswordBox>
            <Button Click="Button_Click">Authenticate</Button>
        </StackPanel>
            <ListBox Name="Messages"></ListBox>
        </StackPanel>
    </Grid>
</Page>
